{
  "name": "prisma-arktype",
  "version": "2.0.0",
  "description": "Generate ArkType schemas from your Prisma schema",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "prisma-arktype": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "pkgroll",
    "dev": "pkgroll --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "pnpm build && prisma generate && vitest run",
    "pretest": "pnpm build",
    "prepublishOnly": "npm run build",
    "postinstall": "lefthook install",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "prisma",
    "arktype",
    "validation",
    "schema",
    "generator",
    "typesafe"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeorgeIpsum/prisma-arktype.git"
  },
  "homepage": "https://github.com/GeorgeIpsum/prisma-arktype#readme",
  "bugs": {
    "url": "https://github.com/GeorgeIpsum/prisma-arktype/issues"
  },
  "packageManager": "pnpm@10.19.0",
  "dependencies": {
    "@prisma/generator-helper": "^6.18.0",
    "arktype": "^2.1.25"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@prisma/client": "^6.18.0",
    "@tilli-pro/biome": "^0.8.0",
    "@types/node": "^24.10.0",
    "lefthook": "^2.0.2",
    "pkgroll": "^2.20.1",
    "prisma": "^6.18.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
